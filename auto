import os
import pyttsx3
import pyaudio

while True:
    pyttsx3.speak("Welcome to the app buddy")
    pyttsx3.speak("would you like to move further")
    print("would you like to move further : ",end="")
    y=input()
    if y=="yes":
        print("")
    else:
        break
    pyttsx3.speak("which language would you prefer Hindi or English")
    print("which language would you prefer hindi or english? : ",end="")
    L=input()
