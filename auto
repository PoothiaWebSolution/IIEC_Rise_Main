        print("आप मेरे साथ चैट कर सकते हैं|")
        pyttsx3.speak("aap mere sath chat kar sakate hain")
    
        while True :
            pyttsx3.speak("aap kya kholana chaahenge")
            print("आप क्या खोलना चाहेंगे| : ",end="")
            p=input()
            if (("open" in p) or ("run" in p) or ("execute" in p) or ("start" in p)) and (("chrome" in p) or("Google chrome" in p)):
             os.system("chrome")
            elif (("open" in p) or ("run" in p) or ("execute" in p) or ("start" in p)) and (("notepade" in p) or("text editor" in p)):
                os.system("Notepad")
            elif(("open" in p) or ("run" in p) or ("execute" in p) or ("start" in p)) and (("camera" in p) or("snapshot" in p)):
                os.system("start microsoft.windows.camera:")
            elif (("open" in p) or ("run" in p) or ("execute" in p) or ("start" in p) or ("play" in p)) and (("video" in p) or ("music" in p) or ("song" in p) or ("video player"in p) or ("vlc media player"in p)):
                os.system("vlc")
            elif (("open" in p) or ("run" in p) or ("execute" in p) or ("start" in p) or ("play" in p)) and (("audio" in p) or ("music" in p) or ("song" in p) or ("media player" in p) or("audio player "in p)):
                os.system("wmplayer")
            elif ("exit" in p)or("bye"in p)or("stop"in p)or("quit"in p)or ("close"in p):
                break
            else:
                print("Enter the correct choice")
